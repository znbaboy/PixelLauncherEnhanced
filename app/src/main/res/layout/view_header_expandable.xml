<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.appbar.AppBarLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/appBarLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/transparent"
    android:fitsSystemWindows="true"
    app:liftOnScroll="true">

    <com.google.android.material.appbar.CollapsingToolbarLayout
        android:id="@+id/collapsing_toolbar"
        android:layout_width="match_parent"
        android:layout_height="192dp"
        app:collapsedTitleTextAppearance="@style/Toolbar.TitleText.Collapsed"
        app:collapsedTitleTextColor="@color/text_color_primary"
        app:contentScrim="?attr/colorSurfaceContainer"
        app:expandedTitleMarginBottom="40dp"
        app:expandedTitleMarginEnd="24dp"
        app:expandedTitleMarginStart="24dp"
        app:expandedTitleTextAppearance="@style/Toolbar.TitleText.Expanded"
        app:forceApplySystemWindowInsetTop="true"
        app:layout_scrollFlags="scroll|snap|exitUntilCollapsed"
        app:maxLines="2"
        app:scrimAnimationDuration="@android:integer/config_mediumAnimTime"
        app:statusBarScrim="@null"
        app:title="@string/app_name"
        app:titleCollapseMode="scale">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:paddingEnd="24dp"
            app:contentInsetStartWithNavigation="0dp"
            app:layout_collapseMode="pin"
            app:maxLines="2"
            app:navigationIconTint="?attr/colorOnSurface"
            app:popupTheme="@style/Theme.PixelLauncherEnhanced"
            app:title="@string/app_name"
            app:titleTextAppearance="@style/Toolbar.TitleText"
            app:titleTextEllipsize="end"
            tools:ignore="RtlSymmetry" />

    </com.google.android.material.appbar.CollapsingToolbarLayout>
</com.google.android.material.appbar.AppBarLayout>